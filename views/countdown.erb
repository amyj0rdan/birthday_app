<head>
  <link rel = "stylesheet"
     type = "text/css"
     href = "stylesheet.css" />
     <title>Birthday countdown</title>
</head>

<body>
  <div class="container">
    <div class="content">
      <% if @countdown.ceil == 365 %>
      <h1>Happy birthday <%= @name %>!</h1>
      <% else %>
      <h1>Your birthday is in <%= @countdown.ceil %> days, <%= @name %>!</h1>
      <% end %>
    </div>
  </div>
</body>
